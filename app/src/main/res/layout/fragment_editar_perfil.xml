<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Perfil.editar_perfil">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagina_libro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_perfil_perfil"
                android:layout_width="131dp"
                android:layout_height="175dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="68dp"
                android:contentDescription="@string/usuario"
                android:src="@drawable/creador_del_sexo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_nombre_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="100dp"
                android:text="@string/humpty_dumpty"
                android:textColor="#000000"
                android:textSize="25sp"
                app:layout_constraintStart_toEndOf="@+id/img_perfil_perfil"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_correo_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:text="@string/dumpty_humpty_copernic_cat"
                android:textColor="#8ACED5"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/img_perfil_perfil"
                app:layout_constraintTop_toBottomOf="@+id/txt_nombre_perfil" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_personajes"
                android:layout_width="413dp"
                android:layout_height="match_parent"
                android:layout_marginTop="38dp"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="MissingConstraints"
                tools:listitem="@layout/item_listapersonajes" />

            <ImageButton
                android:id="@+id/img_editar_perfil2"
                android:layout_width="111dp"
                android:layout_height="124dp"

                android:layout_marginStart="16dp"
                android:layout_marginTop="100dp"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="@string/boto_editar_perfil"
                android:scaleType="fitStart"
                android:src="@drawable/edit_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/img_editar_perfil3"
                android:layout_width="55dp"
                android:layout_height="65dp"

                android:layout_marginTop="100dp"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="@string/boto_editar_perfil"
                android:scaleType="fitStart"
                android:src="@drawable/edit_icon"
                app:layout_constraintStart_toEndOf="@+id/txt_nombre_perfil"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/img_editar_perfil4"
                android:layout_width="55dp"
                android:layout_height="65dp"

                android:layout_marginTop="172dp"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="@string/boto_editar_perfil"
                android:scaleType="fitStart"
                android:src="@drawable/edit_icon"
                app:layout_constraintStart_toEndOf="@+id/txt_nombre_perfil"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="139dp"
                android:layout_marginTop="119dp"
                android:text="Personajes"
                android:textColor="#000000"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_correo_perfil" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>