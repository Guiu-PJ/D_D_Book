<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Perfil.editar_perfil">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagina_libro">

        <ImageView
            android:id="@+id/img_perfil_perfil"
            android:layout_width="131dp"
            android:layout_height="175dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="68dp"
            android:contentDescription="@string/usuario"
            android:src="@drawable/creador_del_sexo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_nombre_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="100dp"
            android:textColor="#000000"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/img_perfil_perfil"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_correo_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:textColor="#8ACED5"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/img_perfil_perfil"
            app:layout_constraintTop_toBottomOf="@+id/txt_nombre_perfil" />

        <ImageButton
            android:id="@+id/img_editar_foto"
            android:layout_width="85dp"
            android:layout_height="96dp"

            android:layout_marginStart="68dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/boto_editar_perfil"
            android:scaleType="fitStart"
            android:src="@drawable/edit_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/img_editar_nombre"
            android:layout_width="55dp"
            android:layout_height="65dp"

            android:layout_marginTop="100dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/boto_editar_perfil"
            android:scaleType="fitStart"
            android:src="@drawable/edit_icon"
            app:layout_constraintStart_toEndOf="@+id/txt_nombre_perfil"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_aceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#57C857"
            android:text="@string/aceptar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_perfil_perfil" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>