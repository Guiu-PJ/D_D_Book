<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dados">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagina_libro"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:background="@drawable/tapa"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-21dp"
        tools:layout_editor_absoluteY="-12dp" />

    <TextView
        android:id="@+id/txt_dados"
        android:layout_width="144dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:text="@string/dados"
        android:textColor="#FFDF42"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img_perfil"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:adjustViewBounds="false"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/imagen_usuario"
        android:contentDescription="@string/usuario" />

    <ImageButton
        android:id="@+id/img_logo"
        android:layout_width="48dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        android:contentDescription="@string/logo"
        tools:ignore="SpeakableTextPresentCheck"/>

    <EditText
        android:id="@+id/txt_numero_de_dados"
        android:layout_width="126dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="120dp"
        android:hint="@string/numero_de_dados"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/txt_modificador"
        android:layout_width="126dp"
        android:layout_height="38dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="120dp"
        android:hint="@string/modificador"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck"
        android:importantForAutofill="no" />

    <ImageView
        android:id="@+id/img_dado"
        android:layout_width="189dp"
        android:layout_height="228dp"
        android:layout_marginBottom="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/dado"
        android:contentDescription="@string/dado"
       />

    <Button
        android:id="@+id/btn_tirar"
        android:layout_width="108dp"
        android:layout_height="65dp"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="240dp"
        android:backgroundTint="@color/gris"
        android:text="@string/tirar"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_resultado_final"
        android:layout_width="138dp"
        android:layout_height="34dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="258dp"
        android:layout_marginBottom="180dp"
        android:text="@string/resultado_final"
        style="@style/txt_resultado_dados"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_titulo_resultado"
        style="@style/txt_resultado_dados"
        android:layout_width="179dp"
        android:layout_height="36dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="217dp"
        android:layout_marginBottom="144dp"
        android:text="@string/resultado_de_cada_dado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_resultado_dados"
        style="@style/txt_resultado_dados"
        android:layout_width="327dp"
        android:layout_height="132dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="7dp"
        android:text="@string/dado1_3_dado2_9_dado3_15_dado4_10_dado5_1_scroll_para_ver_todos_los_dados_si_es_necesario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_felcha"
        android:layout_width="81dp"
        android:layout_height="82dp"
        android:layout_marginBottom="7dp"
        android:contentDescription="@string/flecha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_resultado_dados"
        app:srcCompat="@drawable/flecha"
        />

    <Spinner
        android:id="@+id/spin_tipodado"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/img_dado"
        app:layout_constraintEnd_toStartOf="@+id/txt_modificador"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txt_numero_de_dados"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>