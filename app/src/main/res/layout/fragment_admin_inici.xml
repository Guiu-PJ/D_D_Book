<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagina_libro"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:background="@drawable/tapa_verde_3"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-21dp"
        tools:layout_editor_absoluteY="-12dp" />

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:text="@string/titulo"
        android:textColor="#FFDF42"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="false"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toStartOf="@+id/txt_titulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.731"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@drawable/imagen_usuario"
        android:contentDescription="usuario" />

    <ImageButton
        android:id="@+id/fotologo"
        android:layout_width="48dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck"/>

    <Button
        android:id="@+id/btn_novedades"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/brn_height"
        android:layout_marginStart="@dimen/layout_margin_start"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="@dimen/layout_margin_end"
        android:backgroundTint="@color/gris"
        android:hapticFeedbackEnabled="false"
        android:text="@string/novedades"
        android:textColor="@color/btn_txt_color"
        android:textSize="@dimen/btn_txt_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/Usuarios"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/brn_height"
        android:layout_marginStart="67dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="67dp"
        android:backgroundTint="@color/gris"
        android:hapticFeedbackEnabled="false"
        android:text="@string/usuarios"
        android:textColor="@color/btn_txt_color"
        android:textSize="@dimen/btn_txt_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Reglas" />

    <Button
        android:id="@+id/Reglas"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/brn_height"
        android:layout_marginStart="67dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="67dp"
        android:backgroundTint="@color/gris"
        android:hapticFeedbackEnabled="false"
        android:text="@string/reglas"
        android:textColor="@color/btn_txt_color"
        android:textSize="@dimen/btn_txt_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compendios" />

    <Button
        android:id="@+id/compendios"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/brn_height"
        android:layout_marginStart="67dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="67dp"
        android:backgroundTint="@color/gris"
        android:hapticFeedbackEnabled="false"
        android:text="@string/compendios"
        android:textColor="@color/btn_txt_color"
        android:textSize="@dimen/btn_txt_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_novedades" />


</androidx.constraintlayout.widget.ConstraintLayout>