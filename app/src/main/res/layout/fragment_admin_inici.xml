<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_inici">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagina_libro">

    <Button
        android:id="@+id/btn_novedades"
        style="@style/btn_inicio"
        android:layout_marginTop="144dp"
        android:text="@string/novedades"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_usuarios"
        style="@style/btn_inicio"
        android:layout_marginTop="60dp"
        android:text="@string/usuarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reglas" />

    <Button
        android:id="@+id/btn_reglas"
        style="@style/btn_inicio"
        android:layout_marginTop="60dp"
        android:text="@string/reglas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_compendios" />

    <Button
        android:id="@+id/btn_compendios"
        style="@style/btn_inicio"
        android:layout_marginTop="60dp"
        android:text="@string/compendios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_novedades" />


</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>